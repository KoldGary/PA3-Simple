# LONN: List of Non-empty Numbers
# Lexical specification

skip WHITESPACE '\s+'
skip COMMENT '#.*'
token LP '\('
token RP '\)'
token NUM '\d+'
%
# Syntactic specification
<lonn>:Program ::= LP <nums> RP
<nums> ::= <num> <rest>
<rest>:NumList ::= <nums>
<rest>:Empty ::= 
<num> ::= <NUM>
%
# Semantic specification
Program.min = nums.min

NumList.min = min(num.val, rest.min)

MoreNums.min = nums.min

Empty.min = float('inf')   # identity for min

num.val = int(NUM.text)

